{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "off",
        "noConfusingVoidType": "off"
      },
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off"
      }
    }
  }
}
