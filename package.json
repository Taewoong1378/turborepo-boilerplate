{
  "name": "turborepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "main": "concurrently \"turbo run watch:css\" \"turbo run dev --parallel --filter=main...\"",
    "main-build": "turbo run build:css && turbo run build --parallel --filter=main...",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "tsc:check": "tsc -p tsconfig.json"
  },
  "lint-staged": {
    "apps/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@swc/core": "^1.4.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^9.0.8",
    "@types/webpack-env": "^1.18.4",
    "autoprefixer": "^10.4.17",
    "compression-webpack-plugin": "^11.0.0",
    "concurrently": "^8.2.2",
    "eslint-prettier-config-custom": "workspace:*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.1",
    "tailwind-base": "workspace:*",
    "ts-node": "10.9.2",
    "tsconfig": "workspace:*",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3",
    "typescript-plugin-css-modules": "^5.1.0"
  },
  "engines": {
    "node": ">=18.17.0 <19.0.0"
  },
  "packageManager": "pnpm@7.13.4",
  "dependencies": {
    "@vercel/analytics": "^1.2.0",
    "classnames": "^2.5.1",
    "design-system": "workspace:*",
    "framer-motion": "^11.0.5",
    "jotai": "^2.6.4",
    "jotai-immer": "^0.3.0",
    "jotai-optics": "^0.3.2",
    "lodash-es": "^4.17.21",
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.71.0",
    "shared-utils": "workspace:*",
    "uuid": "^9.0.1",
    "yup": "^1.3.3"
  }
}
